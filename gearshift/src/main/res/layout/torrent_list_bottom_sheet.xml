<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="org.sugr.gearshift.viewmodel.TorrentListViewModel"/>
	    <import type="android.view.View"/>
    </data>

	<android.support.v4.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/torrent_list_bottom_sheet"
		android:background="@{viewModel.hasError ? @color/error : @color/statusSheet}"
		android:elevation="8dp"
		app:layout_behavior="org.sugr.gearshift.ui.view.behaviors.CustomBottomSheetBehavior"
		app:behavior_peekHeight="@dimen/torrent_list_status_height">

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:visibility="@{viewModel.hasError ? View.VISIBLE : View.GONE}"
				android:orientation="vertical">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="@dimen/torrent_list_error_height"
					android:layout_marginStart="@dimen/activity_horizontal_margin"
					android:layout_marginEnd="@dimen/activity_horizontal_margin"
					android:paddingTop="4dp"
					android:paddingBottom="4dp"
					android:maxLines="1"
					android:ellipsize="end"
					android:gravity="start|center_vertical"
					android:textSize="18sp"
					android:textAppearance="?android:textAppearanceInverse"
					android:text="@string/torrent_list_error_title"/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/activity_horizontal_margin"
					android:layout_marginEnd="@dimen/activity_horizontal_margin"
					android:paddingTop="4dp"
					android:paddingBottom="4dp"
					android:gravity="start"
					android:textAppearance="?android:textAppearanceInverse"
					android:text="@{viewModel.errorMessage}"/>

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:visibility="@{viewModel.hasError ? View.GONE : View.VISIBLE}"
				android:orientation="vertical">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="@dimen/torrent_list_status_height"
					android:layout_marginStart="@dimen/activity_horizontal_margin"
					android:layout_marginEnd="@dimen/activity_horizontal_margin"
					android:paddingTop="4dp"
					android:paddingBottom="4dp"
					android:maxLines="1"
					android:ellipsize="end"
					android:gravity="end|center_vertical"
					android:textSize="12sp"
					android:text="@{viewModel.statusText}"
					tools:text="Down: 1.5 MB/s, Up: 0.23 Mb/s, Space: 1.7TB"/>

				<android.support.v7.widget.SwitchCompat
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/activity_horizontal_margin"
					android:layout_marginEnd="@dimen/activity_horizontal_margin"
					android:layout_marginTop="8dp"
					android:layout_marginBottom="8dp"
					android:visibility="@{viewModel.hasSpeedLimitSwitch ? View.VISIBLE : View.GONE}"
					android:checked="@={viewModel.speedLimit}"
					android:text="@string/torrent_list_status_speed_limit"
					android:onCheckedChanged="@{(cb, checked) -> viewModel.onSpeedLimitChecked(checked)}" />

				<TextView
					style="@style/HeaderText.Small.Title"
					android:layout_marginBottom="0dp"
					android:text="@string/torrent_list_sorting_header"/>

				<View style="@style/Separator"/>

				<Spinner
					style="@style/Form.Spinner"
					android:layout_marginBottom="8dp"
					android:entries="@{viewModel.sortEntries}"
					bind:selection="@{viewModel.sortListener.position}"
					bind:onItemSelectedListener="@{viewModel.sortListener}"/>

				<CheckBox
					style="@style/Form.Checkbox"
					android:layout_marginBottom="8dp"
					android:checked="@={viewModel.sortDescending}"
					android:text="@string/torrent_list_sort_descending"/>

			</LinearLayout>

		</FrameLayout>

	</android.support.v4.widget.NestedScrollView>

</layout>
